## launch uxterm with bspwm config

# CONFIG="$HOME/.config/bspwm/uxterm/uxterm.yml"

if [ "$1" == "-f" ]; then
	uxterm --class 'uxterm-float,uxterm-float'
elif [ "$1" == "-s" ]; then
	uxterm --class 'Fullscreen,Fullscreen' -o window.startup_mode=fullscreen window.padding.x=30 window.padding.y=30 background_opacity=0.95 font.size=14
else
	uxterm
fi
