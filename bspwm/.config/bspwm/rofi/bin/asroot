DIR="$HOME/.config/bspwm"

rofi_command="rofi -theme $DIR/rofi/themes/asroot.rasi"

# Apps
terminal=" Terminal"
files=" PcManFM"
editor=" Code"
clifm=" Ranger"
mpad=" Mousepad"
nvim=" NVim"

# Variable passed to rofi
options="$terminal
$files
$editor
$clifm
$mpad
$nvim"

# Functions

chosen="$(echo "$options" | $rofi_command -p "Ejecuta aplicaciones root" -dmenu -selected-row 0)"
case $chosen in
    $terminal)
        apps_as_root 'xterm --class xterm-float,xterm-float
        ;;
    $files)
        apps_as_root 'pcmanfm'
        ;;
    $editor)
        apps_as_root 'code'
        ;;
    $clifm)
        apps_as_root 'uxterm --class uxterm-float,uxterm-float -e ranger'
        ;;
    $mpad)
        apps_as_root 'mousepad'
        ;;
    $nvim)
        apps_as_root 'uxterm --class uxterm-float,uxterm-float -e nvim'
        ;;
esac


