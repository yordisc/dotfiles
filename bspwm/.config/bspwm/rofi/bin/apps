#!/usr/bin/env bash

## Copyright (C) 2020-2021 Aditya Shakya <adi1090x@gmail.com>
## Everyone is permitted to copy and distribute copies of this file under GNU-GPL3

DIR="$HOME/.config/bspwm"

rofi_command="rofi -theme $DIR/rofi/themes/apps.rasi"

# Apps
animals="Animals"
bonsai="Bonsai"
colorbar="Colorbar"
colorblocks="Colorblocks"
colortest="Colortest"
colorwheel="Colorwheel"
crunch="Crunch"
crunchbang="Crunchbang"
dna="Crunchbang"
emwave="Emwave"
faces="Faces"
fade="Fade"
ghosts="Ghosts"
hedgehogs="Hedgehogs"
illumina="Illumina"
invaders="Invaders"
mouseface="Mouseface"
panes="Panes"
pipes="Pipes"
pipes3d="Pipes3d"
railcars="Railcars"
rallyx="Rallyx"
square="Square"
tanks="Tanks"
testfonts="Testfonts"
tiefighter="Tiefighter"
unix="Unix"
zwaves="Zwaves"

# Variable passed to rofi
options="$animals
$bonsai
$colorbar
$colorblocks
$colortest
$colorwheel
$crunch
$crunchbang
$dna
$emwave
$faces
$fade
$ghosts
$hedgehogs
$illumina
$invaders
$mouseface
$panes
$pipes
$pipes3d
$railcars
$rallyx
$square
$tanks
$testfonts
$tiefighter
$unix
$zwaves"

# Functions

chosen="$(echo "$options" | $rofi_command -p "Ejecuta ilustraciones en shell" -dmenu -selected-row 0)"
case $chosen in
    $animals)
        xterm --hold -e ~/.config/bspwm/scripts/terminal/animals
        ;;
    $bonsai)
        xterm --hold -e ~/.config/bspwm/scripts/terminal/bonsai
        ;;
    $colorbar)
        xterm --hold -e ~/.config/bspwm/scripts/terminal/colorbar
        ;;                                                   
    $colorblocks)                                                 
        xterm --hold -e ~/.config/bspwm/scripts/terminal/colorblocks
        ;;                                                   
    $colortest)                                                 
        xterm --hold -e ~/.config/bspwm/scripts/terminal/colortest
        ;;                                                   
    $colorwheel)                                                 
        xterm --hold -e ~/.config/bspwm/scripts/terminal/colorwheel
        ;;                                                   
    $crunch)                                                 
        xterm --hold -e ~/.config/bspwm/scripts/terminal/crunch
        ;;                                                   
    $crunchbang)                                                 
        xterm --hold -e ~/.config/bspwm/scripts/terminal/crunchbang
        ;;                                                   
    $dna)                                                 
        xterm --hold -e ~/.config/bspwm/scripts/terminal/dna
        ;;                                                   
    $emwave)                                                 
        xterm --hold -e ~/.config/bspwm/scripts/terminal/emwave
        ;;                                                   
    $faces)                                                 
        xterm --hold -e ~/.config/bspwm/scripts/terminal/faces
        ;;                                                   
    $fade)                                                 
        xterm --hold -e ~/.config/bspwm/scripts/terminal/fade
        ;;                                                   
    $ghosts)                                                 
        xterm --hold -e ~/.config/bspwm/scripts/terminal/ghosts
        ;;                                                   
    $hedgehogs)                                                 
        xterm --hold -e ~/.config/bspwm/scripts/terminal/hedgehogs
        ;;                                                   
    $illumina)                                                 
        xterm --hold -e ~/.config/bspwm/scripts/terminal/illumina
        ;;                                                   
    $invaders)                                                 
        xterm --hold -e ~/.config/bspwm/scripts/terminal/invaders
        ;;                                                   
    $mouseface)                                                 
        xterm --hold -e ~/.config/bspwm/scripts/terminal/mouseface
        ;;                                                   
    $panes)                                                 
        xterm --hold -e ~/.config/bspwm/scripts/terminal/panes
        ;;                                                   
    $pipes)                                                 
        xterm --hold -e ~/.config/bspwm/scripts/terminal/pipes
        ;;                                                   
    $pipes3d)                                                 
        xterm --hold -e ~/.config/bspwm/scripts/terminal/pipes3d
        ;;                                                   
    $railcars)                                                 
        xterm --hold -e ~/.config/bspwm/scripts/terminal/railcars
        ;;                                                   
    $rallyx)                                                 
        xterm --hold -e ~/.config/bspwm/scripts/terminal/rally-x
        ;;                                                   
    $square)                                                 
        xterm --hold -e ~/.config/bspwm/scripts/terminal/square
        ;;                                                   
    $tanks)                                                 
        xterm --hold -e ~/.config/bspwm/scripts/terminal/tanks
        ;;                                                   
    $testfonts)                                                 
        xterm --hold -e ~/.config/bspwm/scripts/terminal/testfonts
        ;;                                                   
    $tiefighter)                                                 
        xterm --hold -e ~/.config/bspwm/scripts/terminal/tiefighter
        ;;                                                   
    $unix)                                                 
        xterm --hold -e ~/.config/bspwm/scripts/terminal/unix
        ;;                                                   
    $zwaves)                                                 
        xterm --hold -e ~/.config/bspwm/scripts/terminal/zwaves
        ;;
esac


